<Page x:Class="Request_Refill.Pages.SetupWizardSettings_Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Request_Refill.Pages"
      mc:Ignorable="d" 
      Title="FirstSetupSettings_Page1">
	<Page.Resources>
		<FontFamily x:Key="Proletarsk">
			pack://application:,,,/Fonts/Proletarsk.ttf#Proletarsk
		</FontFamily>
	</Page.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="76"/>
		</Grid.RowDefinitions>

		<Grid Grid.Row="0">
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>

			<TextBlock Grid.Row="0" Text="Кабинет" FontSize="24" FontFamily="{StaticResource Proletarsk}"/>
			<ComboBox  Grid.Row="1" Name="Combobox_SelectCabinet"/>

		</Grid>
		<Grid Grid.Row="1" Margin="8">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="auto"/>
			</Grid.ColumnDefinitions>

			<Button Width="207" Height="60" FontFamily="{StaticResource Proletarsk}" FontSize="24" Grid.Column="0" Content="Отмена" Background="#ed3b62"/>
			<Button Width="207" Height="60" FontFamily="{StaticResource Proletarsk}" FontSize="24" Grid.Column="2" Content="Дальше" Background="#3b62ed"/>
		</Grid>


	</Grid>
</Page>
