<Application x:Class="Request_Refill.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Request_Refill">
	<Application.Resources>
		
		<FontFamily x:Key="Proletarsk">
			pack://application:,,,/Fonts/Proletarsk.ttf#Proletarsk
		</FontFamily>


		<Style TargetType="Button">
			<Setter Property="Height" Value="60"/>
			<Setter Property="FontSize" Value="24"/>
			<Setter Property="FontFamily" Value="{StaticResource Proletarsk}"/>
			<Setter Property="Foreground" Value="#ffffff"/>
			<Setter Property="Background" Value="#3b62ed"/>
		</Style>

		<Style TargetType="Button" x:Key="CancelButton">
			<Setter Property="Height" Value="60"/>
			<Setter Property="FontSize" Value="24"/>
			<Setter Property="FontFamily" Value="{StaticResource Proletarsk}"/>
			<Setter Property="Foreground" Value="#ffffff"/>
			<Setter Property="Background" Value="#ed3b62"/>
		</Style>

		<Style TargetType="Button" x:Key="AcceptButton">
			<Setter Property="Height" Value="60"/>
			<Setter Property="FontSize" Value="24"/>
			<Setter Property="FontFamily" Value="{StaticResource Proletarsk}"/>
			<Setter Property="Foreground" Value="#000000"/>
			<Setter Property="Background" Value="#3bed62"/>
		</Style>

		<Style TargetType="ComboBox">
			<Setter Property="Height" Value="48"/>
			<Setter Property="FontSize" Value="24"/>
			<Setter Property="FontFamily" Value="{StaticResource Proletarsk}"/>
			<Setter Property="Foreground" Value="#000000"/>
			<Setter Property="Background" Value="#ffffff"/>
		</Style>


	</Application.Resources>
</Application>
