<Window x:Class="Request_Refill.Windows.WindowCreateRequestRefill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Request_Refill.Windows"
                mc:Ignorable="d"
        AllowsTransparency="True"
        ResizeMode="NoResize" 
		WindowStartupLocation="CenterScreen" 
		WindowStyle="None" 
		Background="{x:Null}" 
		SizeToContent="WidthAndHeight" Title="Настройки">

	<Window.Resources>
		<FontFamily x:Key="Proletarsk">
			pack://application:,,,/Fonts/Proletarsk.ttf#Proletarsk
		</FontFamily>
	</Window.Resources>

	<Border Background="White" CornerRadius="16" Width="800" Height="640" Margin="20,20,20,30" RenderTransformOrigin="0.5,0.5">
		<Border.RenderTransform>
			<TransformGroup>
				<ScaleTransform ScaleX="1"/>
				<SkewTransform/>
				<RotateTransform/>
				<TranslateTransform/>
			</TransformGroup>
		</Border.RenderTransform>
		<Border.Effect>
			<DropShadowEffect Direction="270" Opacity="0.25" Color="#808080" BlurRadius="20" ShadowDepth="10"/>
		</Border.Effect>

		<Grid ClipToBounds="True">
			<Grid.RowDefinitions>
				<RowDefinition Height="64"/>
				<RowDefinition/>
				<RowDefinition Height="71"/>
			</Grid.RowDefinitions>

			<Border Grid.Row="0" BorderThickness="0,0,0,1" BorderBrush="#6980f7">
				<Grid Margin="0,0,0,-1" >
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="16"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition/>
						<ColumnDefinition Width="64"/>
					</Grid.ColumnDefinitions>


					<Border Grid.Column="1" BorderThickness="0,4,0,0" BorderBrush="#3b62ed" HorizontalAlignment="Left" Padding="10,0,10,4">
						<TextBlock Grid.Column="1" Text="Создание заявки на заправку" FontSize="24" FontFamily="{StaticResource Proletarsk}" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
					</Border>

					<Button Grid.Column="3" Click="ClickCloseWindow">
						<Image Source="/Resources/32/X.png" Width="32"/>
					</Button>
				</Grid>
			</Border>

			<Grid Grid.Row="1" VerticalAlignment="Stretch">
				<Grid.RowDefinitions>
					<RowDefinition/>
					<RowDefinition Height="auto"/>
				</Grid.RowDefinitions>
				
				
				<DataGrid Margin="10" Grid.Row="0" Name="DataGridListOfPrintedDocument" AutoGenerateColumns="False" IsReadOnly="True" HorizontalAlignment="Center"
					CanUserReorderColumns="False"
					CanUserResizeColumns="False"
					CanUserSortColumns="False"
					CanUserResizeRows="False"
					SelectionMode="Single">
					<DataGrid.Columns>
						<DataGridTextColumn Header="#" Binding="{Binding Number}" />
						<DataGridTextColumn Header="Название" Binding="{Binding NameDocument}"/>
						<DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=dd.MM.yy}"/>
						<DataGridTextColumn Header="Страниц" Binding="{Binding CountPages}"/>
					</DataGrid.Columns>
				</DataGrid>
				<Grid HorizontalAlignment="Center" Grid.Row="1">
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>
					
					<TextBlock Grid.Column="0" Text="Итого" Margin="8"/>
					<TextBlock Grid.Column="1" Text="95" Margin="8" Name="Textblock_SumPagesPrintouts"/>
				</Grid>
			</Grid>


			<Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="#6980f7">
				<Grid Margin="16,15,16,16">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="auto"/>
						<ColumnDefinition Width="10"/>
						<ColumnDefinition Width="auto"/>
						<ColumnDefinition/>
						<ColumnDefinition Width="auto"/>
						<ColumnDefinition Width="10"/>
						<ColumnDefinition Width="auto"/>
						<ColumnDefinition Width="10"/>
						<ColumnDefinition Width="auto"/>
					</Grid.ColumnDefinitions>

					<Button Content="Подтвердить" Width="133" Height="39" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" FontFamily="{StaticResource Proletarsk}" FontSize="16" Click="SaveRequestRefill_Click"/>
					<Button Content="Отмена" Width="133" Height="39" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" FontFamily="{StaticResource Proletarsk}" FontSize="16" Click="ClickCloseWindow"/>
					<Button Content="Добавить запись" Grid.Column="8" Width="133" Height="39" Click="CreatePrintoutData_Click"/>
					<Button Content="Изменить" Grid.Column="6" Width="133" Height="39" Click="ChangePrintoutData_Click"/>
					<Button Content="Удалить" Grid.Column="4" Width="133" Height="39" Click="DeletePrintoutData_Click"/>
				</Grid>
			</Border>
		</Grid>
	</Border>
</Window>