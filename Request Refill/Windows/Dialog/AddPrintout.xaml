<Window x:Class="Request_Refill.Windows.Dialog.DataWindowPrintout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Request_Refill.Windows.Dialog"
        mc:Ignorable="d"
        Title="AddPrintout" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>

		<StackPanel HorizontalAlignment="Center">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<TextBlock Text="Наименование документа" Margin="10"/>
				<TextBox Width="250" Margin="10" Name="Textbox_NameDocument"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Количество страниц" Margin="10"/>
				<TextBox Width="250" Margin="10" Name="Textbox_CountPages"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Дата" Margin="10"/>
				<DatePicker Name="DatePicker_date"/>
			</StackPanel>
		</StackPanel>

		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Content="*text*" Click="AddPrintoutData_Click" Name="Button_AddPrintoutData"/>
			<Button Content="Отмена" Click="Cancel_Click"/>
		</StackPanel>


	</Grid>
</Window>
