<Window x:Class="Request_Refill.Windows.WindowTraySelectFuntion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Request_Refill.Windows"
        mc:Ignorable="d"
		WindowStyle="None" 
		Background="{x:Null}"
		ShowInTaskbar="False"
		Title="Request Refill"
		Topmost="True"
		Deactivated="Window_Deactivated"
		
        SizeToContent="WidthAndHeight" AllowsTransparency="True"  > <!--MouseLeave="Window_MouseLeave"-->
	<Border Background="White" CornerRadius="32" Margin="20,20,20,30" >
		<Border.Effect>
			<DropShadowEffect Direction="270" Opacity="0.25" Color="#000000" BlurRadius="20" ShadowDepth="10"/>
		</Border.Effect>
		<StackPanel Margin="8">

			<Button Content="Замена картриджа" Width="364" Height="60" Click="OpenReplaceCartridge"/>
			<Rectangle Height="10"/>
			<Button Content="Создание заявки" Width="364" Height="60" Click="OpenCreateRequestRefill_Click"/>
			<Rectangle Height="10"/>
			<Button Content="Настройки" Width="364" Height="60" Click="OpenSettings_Click"/>
			<Rectangle Height="10"/>
			<Button Content="О программе" Width="364" Height="60"/>
			<Rectangle Height="10"/>
			<Button Content="Закрыть Request Refill" Width="364" Height="60" Click="Shutdown_Click"/>

		</StackPanel>
    </Border>
</Window>
