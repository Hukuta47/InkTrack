<Window x:Class="Request_Refill.Windows.WindowTraySelectFuntion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Request_Refill.Windows"
        mc:Ignorable="d"
		WindowStyle="None" 
		Background="{x:Null}" 
		
        SizeToContent="WidthAndHeight" AllowsTransparency="True" MouseLeave="Window_MouseLeave">
	<Border Background="White" CornerRadius="32" Margin="20,20,20,30" >
		<Border.Effect>
			<DropShadowEffect Direction="270" Opacity="0.25" Color="#000000" BlurRadius="20" ShadowDepth="10"/>
		</Border.Effect>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>

			<Button Content="Замена картриджа" Width="119" Height="132" Grid.Column="0" Grid.RowSpan="2" Margin="8,8,4,8" Click="OpenReplaceCartridge"/>
			<Button Content="Создание заявки" Width="119" Height="132" Grid.Column="1" Grid.RowSpan="2" Margin="4,8,4,8" Click="OpenCreateRequestRefill_Click"/>
			<Button Content="Настр" Width="62" Height="62" Grid.Column="2" Grid.Row="0" Margin="4,8,8,4" Click="OpenSettings_Click"/>
			<Button Content="Выкл" Width="62" Height="62" Grid.Column="3" Grid.Row="1" Margin="4,4,8,8" Click="Shutdown_Click"/>

		</Grid>
    </Border>
</Window>
