<Window x:Class="Request_Refill.Windows.WindowSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Request_Refill.Windows"
        mc:Ignorable="d"
        AllowsTransparency="True"
        ResizeMode="NoResize" 
		WindowStartupLocation="CenterScreen" 
		WindowStyle="None" 
		Background="{x:Null}" 
		SizeToContent="WidthAndHeight" Title="Настройки"
		>

	<Border Background="White" CornerRadius="16" Width="480" Height="343" Margin="20,20,20,30" RenderTransformOrigin="0.5,0.5">
		<Border.RenderTransform>
			<TransformGroup>
				<ScaleTransform ScaleX="1"/>
				<SkewTransform/>
				<RotateTransform/>
				<TranslateTransform/>
			</TransformGroup>
		</Border.RenderTransform>
		<Border.Effect>
			<DropShadowEffect Direction="270" Opacity="0.25" Color="#808080" BlurRadius="20" ShadowDepth="10"/>
		</Border.Effect>

		<Grid ClipToBounds="True">
			<Grid.RowDefinitions>
				<RowDefinition Height="64"/>
				<RowDefinition/>
				<RowDefinition Height="71"/>
			</Grid.RowDefinitions>

			<Border Grid.Row="0" BorderThickness="0,0,0,1" BorderBrush="#6980f7">
				<Grid Margin="0,0,0,-1" >
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="16"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition/>
						<ColumnDefinition Width="64"/>
					</Grid.ColumnDefinitions>


					<Border Grid.Column="1" BorderThickness="0,4,0,0" BorderBrush="#3b62ed" HorizontalAlignment="Left" Padding="10,0,10,4">
						<TextBlock Grid.Column="1" Text="Настройки" FontSize="24" FontFamily="{StaticResource Proletarsk}" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
					</Border>

					<Button Grid.Column="3" Click="ClickCloseWindow">
						<Image Source="/Resources/32/X.png" Width="32"/>
					</Button>
				</Grid>
			</Border>

			<Grid Grid.Row="1" Margin="16">
				<Grid.RowDefinitions>
					<RowDefinition/>
					<RowDefinition/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<Grid Margin="10" Grid.Row="0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>
					<TextBlock Grid.Column="0" Text="Кабинет" FontSize="16" FontFamily="{StaticResource Proletarsk}" VerticalAlignment="Center"/>
					<ComboBox Grid.Column="1" Width="200" Height="32" Name="ComboboxCabinetSelect" FontFamily="{StaticResource Proletarsk}" FontSize="16" DisplayMemberPath="CabinetName" SelectedValuePath="CabinetID"/>
				</Grid>
				<Grid Margin="10" Grid.Row="1">
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>
					<TextBlock Grid.Column="0" FontSize="16" FontFamily="{StaticResource Proletarsk}" VerticalAlignment="Center"><Run Text="От кого "/><Run Language="ru-ru" Text="делать заявку"/></TextBlock>
					<ComboBox  Grid.Column="1" Width="200" Height="32" Name="ComboboxFromWhoDefaultSelect" FontFamily="{StaticResource Proletarsk}" FontSize="16" DisplayMemberPath="FIO" SelectedValuePath="EmployeeID"/>
				</Grid>
				<Grid Margin="10" Grid.Row="2">
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>
					<TextBlock Grid.Column="0" Text="Принтер" FontSize="16" FontFamily="{StaticResource Proletarsk}" VerticalAlignment="Center"/>
					<ComboBox Grid.Column="1" Width="200" Height="32" Name="ComboboxPrinterDefaultSelect" FontFamily="{StaticResource Proletarsk}" FontSize="16" DisplayMemberPath="PrinterInfo" SelectedValuePath="PrinterID"/>
				</Grid>
			</Grid>
			
			<Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="#6980f7">
				<Grid Margin="0,-1,0,0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition Width="auto"/>
						<ColumnDefinition Width="10"/>
						<ColumnDefinition Width="auto"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>

					<Button Content="Сохранить" Width="117" Height="39" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" FontFamily="{StaticResource Proletarsk}" FontSize="16" Click="SaveSettings_Click"/>
					<Button Content="Отмена" Width="117" Height="39" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="3" FontFamily="{StaticResource Proletarsk}" FontSize="16" Click="ClickCloseWindow"/>
				</Grid>
			</Border>
		</Grid>
	</Border>
</Window>