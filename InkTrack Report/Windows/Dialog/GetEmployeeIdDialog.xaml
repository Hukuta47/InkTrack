<Window x:Class="InkTrack_Report.Windows.Dialog.GetEmployeeIdDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InkTrack_Report.Windows.Dialog"
        mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
		WindowStyle="None"
        Title="GetEmployeeIdDialog" Height="450" Width="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>

		<ComboBox Name="Combobox_SelectEmployee" SelectedValuePath="EmployeeID" DisplayMemberPath="FIO"/>

		<StackPanel Grid.Row="1">
			<Button Content="Ок" Click="Ok_Click"/>
		</StackPanel>
	</Grid>
</Window>
