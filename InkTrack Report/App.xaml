<Application x:Class="InkTrack_Report.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:InkTrack_Report">
	<Application.Resources>
		
		<FontFamily x:Key="Proletarsk">
			pack://application:,,,/Fonts/Proletarsk.ttf#Proletarsk
		</FontFamily>
		<SolidColorBrush Color="#3B62ED" x:Key="DefaultColor"/>


		<Style TargetType="Button">

			

			<Setter Property="Height" Value="60"/>
			<Setter Property="FontSize" Value="24"/>
			<Setter Property="FontFamily" Value="{StaticResource Proletarsk}"/>
			<Setter Property="Foreground" Value="#ffffff"/>
			<Setter Property="Background" Value="{StaticResource DefaultColor}"/>
			<Setter Property="BorderThickness" Value="0"/>


		</Style>

		<Style TargetType="Button" x:Key="CancelButton">
			<Setter Property="Height" Value="60"/>
			<Setter Property="FontSize" Value="24"/>
			<Setter Property="FontFamily" Value="{StaticResource Proletarsk}"/>
			<Setter Property="Foreground" Value="#ffffff"/>
			<Setter Property="Background" Value="#ed3b62"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Style.Resources>
				<Style TargetType="Border">
					<Setter Property="CornerRadius" Value="12"/>
				</Style>
			</Style.Resources>
		</Style>

		<Style TargetType="Button" x:Key="AcceptButton">
			<Setter Property="Height" Value="60"/>
			<Setter Property="FontSize" Value="24"/>
			<Setter Property="FontFamily" Value="{StaticResource Proletarsk}"/>
			<Setter Property="Foreground" Value="#000000"/>
			<Setter Property="Background" Value="#3bed62"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Style.Resources>
				<Style TargetType="Border">
					<Setter Property="CornerRadius" Value="12"/>
				</Style>
			</Style.Resources>
		</Style>

		<Style TargetType="ComboBox">
			<Setter Property="Height" Value="48"/>
			<Setter Property="FontSize" Value="24"/>
			<Setter Property="FontFamily" Value="{StaticResource Proletarsk}"/>
			<Setter Property="Foreground" Value="#000000"/>
			<Setter Property="BorderBrush" Value="#3b62ed"/>
			<Setter Property="Background" Value="#ffffff"/>
		</Style>
		
		<Style TargetType="TextBox">
			<Setter Property="Height" Value="48"/>
			<Setter Property="FontSize" Value="24"/>
			<Setter Property="FontFamily" Value="{StaticResource Proletarsk}"/>
			<Setter Property="Foreground" Value="#000000"/>
			<Setter Property="BorderBrush" Value="#3b62ed"/>
			<Setter Property="Background" Value="#ffffff"/>
		</Style>

		<Style TargetType="PasswordBox">
			<Setter Property="Height" Value="48"/>
			<Setter Property="FontSize" Value="24"/>
			<Setter Property="FontFamily" Value="{StaticResource Proletarsk}"/>
			<Setter Property="Foreground" Value="#000000"/>
			<Setter Property="BorderBrush" Value="#3b62ed"/>
			<Setter Property="Background" Value="#ffffff"/>
		</Style>
	</Application.Resources>
</Application>
