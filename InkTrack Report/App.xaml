									<VisualState Name="Pressed">
										<Storyboard>
											<DoubleAnimation Storyboard.TargetName="shadowEffect" Storyboard.TargetProperty="Opacity" To="0.35" Duration="0:0:0.3">
												<DoubleAnimation.EasingFunction>
